<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/txtColor</item>
    </style>

    <style name="basicText" parent="AppTheme">
        <item name="android:layout_marginStart">@dimen/margSmall</item>
        <item name="android:textColor">@color/txtColor</item>
        <item name="android:text">@string/testText</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="myToolbarStyle" parent="AppTheme">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:background">@drawable/toolbar_bck</item>
        <item name="colorAccent">@color/txtColor</item>
    </style>

    <style name="btn" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">@dimen/margSmall</item>
        <item name="android:background">@drawable/btnbck</item>



    </style>
</resources>
