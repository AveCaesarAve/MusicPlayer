<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF5722</item>
        <item name="colorPrimaryDark">#E64A19</item>
        <item name="colorAccent">#9E9E9E</item>
        <item name="android:colorControlNormal">#FFFFFF</item>
    </style>

    <style name="basicText" parent="AppTheme">
        <item name="android:layout_marginStart">@dimen/margSmall</item>
        <item name="android:textColor">#212121</item>
        <item name="android:text">@string/Text</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

     <style name="btn" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">@dimen/margSmall</item>
        <item name="android:background">@drawable/buttonbackinside</item>

    </style>
</resources>
